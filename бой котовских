package com.javarush.task.task05.task0505;

/* 
Кошачья бойня
*/

import java.util.concurrent.Callable;

public class Solution {

    public static void main(String[] args) {
        //напишите тут ваш код
       Cat murzik = new Cat("Murzik",2,1,10) ;
       Cat vaska = new Cat("Vaska",3,5,9) ;
       Cat barsik = new Cat("Barsik",4,3,7) ;
        System.out.println(murzik.fight(vaska) ? true : false);
        System.out.println(vaska.fight(barsik) ? true : false);
        System.out.println(barsik.fight(murzik) ? true : false);
            }
        };


    public static class Cat {

        protected String name;
        protected int age;
        protected int weight;
        protected int strength;

        public Cat(String name, int age, int weight, int strength) {
            this.name = name;
            this.age = age;
            this.weight = weight;
            this.strength = strength;
        }

        public boolean fight(Cat anotherCat) {
            int ageScore = Integer.compare(this.age, anotherCat.age);
            int weightScore = Integer.compare(this.weight, anotherCat.weight);
            int strengthScore = Integer.compare(this.strength, anotherCat.strength);

            int score = ageScore + weightScore + strengthScore;
            return score > 0; // return score > 0 ? true : false;
        }
    }
